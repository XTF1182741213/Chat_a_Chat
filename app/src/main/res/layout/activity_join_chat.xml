<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostChat"

    android:weightSum="1"
    android:background="@drawable/chatmain"
    >
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/return_back"
            android:id="@+id/button11"

/>
        <TextView
            android:textColor="#d5ecf1"
            android:layout_centerInParent="true"
            android:text="IP"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10.0dip"
        >
        <EditText
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/editText4" />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/send_email"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/editText4"
            android:id="@+id/button10" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/add_file"
            android:layout_centerHorizontal="true"
            android:textColor="#0099cc"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/editText4"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview2"
        android:fillViewport="false"
        android:layout_below="@id/rl_layout"
        android:layout_above="@id/rl_bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2">
    <TextView
        android:textColor="#d5ecf1"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_gravity="bottom"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="0dip"/>


</LinearLayout>
    </ScrollView>




</RelativeLayout>

